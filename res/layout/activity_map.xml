 	<RelativeLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/relLayETBT"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	
    	<LinearLayout
   			android:id="@+id/lineLayETBT"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:weightSum="100">
    	    
	    <EditText
	        android:layout_weight="30"
	        android:id="@+id/edittextlecture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:hint="Touch to enter lecture hall!"
	        tools:context=".GoogleMapActivity" />

	    <Button
	        android:id="@+id/edittextbutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="70"
	        android:text="@string/edit_button"
	        tools:context=".GooleMapActivity" />
	    </LinearLayout>
		<com.google.android.maps.MapView 
    		xmlns:tools="http://schemas.android.com/tools"
    		android:id="@+id/mapview"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:apiKey="0LIGr976PR9ieBmFbnTRqglKcTUEtXIukD5Xv4g"
    		android:clickable="true"
    		tools:context=".GoogleMapActivity"
    		android:layout_below="@+id/lineLayETBT"
    		 />
    	
	    </RelativeLayout>	
