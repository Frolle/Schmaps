<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campusjohanneberg"
    >


    <Button
        android:id="@+id/johannebergButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/shape"
        android:gravity="center"
        android:text="Johanneberg"
        android:textSize="20dp" />

    <Button
        android:id="@+id/lindholmenButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/johannebergButton"
        android:layout_alignLeft="@+id/johannebergButton"
        android:background="@layout/shape"
        android:gravity="center"
        android:text="Lindholmen"
        android:textSize="20dp" />
</RelativeLayout>