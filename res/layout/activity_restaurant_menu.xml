<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/chalmerslindholmen"
    >
    
    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="top"
        tools:context=".CampusMenu" />

    <Button
        android:id="@+id/lButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/shape"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Lindholmen"
        android:textSize="20dp" />

    <Button
        android:id="@+id/jButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lButton"
        android:layout_alignLeft="@+id/lButton"
        android:background="@layout/shape"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Johanneberg"
        android:textSize="20dp" />

</RelativeLayout>