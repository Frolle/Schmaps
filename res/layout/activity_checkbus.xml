<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tablename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departures from Chalmers"
            android:textColor="@color/white"
            android:textSize="20sp" />
"

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="200dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/ChalmersTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/ChalmersTopRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transp_red"
                        android:orientation="horizontal"
                        android:padding="5dip"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/busTitle"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="16sp"
                            android:text="Buss"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/destTitle"
                            android:layout_marginRight="16sp"
                            android:text="Destination"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/departureTitle"
                            android:layout_marginRight="5sp"
                            android:text="Departure"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/trackTitle"
                            android:layout_marginRight="5sp"
                            android:text="Track"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tablename2"
            android:text="Departures from Lindholmen"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"/>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/LindholmenTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/LindholmenTopRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transp_red"
                        android:orientation="horizontal"
                        android:padding="5dip"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/busTitle2"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="16sp"
                            android:text="Buss"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/destTitle2"
                            android:layout_marginRight="16sp"
                            android:text="Destination"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/departureTitle2"
                            android:layout_marginRight="5sp"
                            android:text="Departure"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/trackTitle2"
                            android:layout_marginRight="5sp"
                            android:text="Track"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/refreshbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="refresh"
        android:textSize="14dp" />

</RelativeLayout>