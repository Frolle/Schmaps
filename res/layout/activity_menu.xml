<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalmers"
    >
    

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="top"
        android:text="@string/app_name"
        tools:context=".StartingPoint" />

    <Button
        android:id="@+id/groupRoomButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/shape"
        android:gravity="center"
        android:text="Boka grupprum"
        android:textSize="20dp" />

    <Button
        android:id="@+id/hallButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/groupRoomButton"
        android:layout_alignLeft="@+id/groupRoomButton"
        android:layout_marginBottom="24dp"
        android:background="@layout/shape"
        android:gravity="center"
        android:text="SÃ¶k sal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/atmButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groupRoomButton"
        android:layout_below="@+id/groupRoomButton"
        android:layout_marginTop="21dp"
        android:background="@layout/shape"
        android:gravity="center"
        android:text="Bankomater"
        android:textSize="20dp" />

</RelativeLayout>